<h2>New item</h2>

<%= simple_form_for @item do |f| %>
<%= f.input :name, input_html: {class:"form-text"}, required:true %>
<%= f.input :price,input_html: {class:"form-text"}, required:true %>
<%= f.input :description, label: t("item.description"), input_html: {class:"form-text"}, required:true %>

<%= f.button :submit,  class: 'btn-primary'  %>
<% end %>

<%= render :partial =>  'shared/email'%>